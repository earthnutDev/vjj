{
  "name": "vjj",
  "type": "module",
  "version": "0.3.3",
  "private": true,
  "description": "一个简单的 npm 包版本更新 🔧 就是 `npm version` 的再 📦 ",
  "scripts": {
    "beautify": "npm run eslint && npm run prettier",
    "build": "jja rm dist && rollup --config rollup.config.js && npm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "diff": "jja pkg --diff",
    "eslint": "jja cls && eslint src",
    "dev": "rollup --config rollup.dev.config.js && VJJ_DEV=true node .eg/index.mjs",
    "prettier": "jja cls && prettier . --write",
    "push:version": "gvv",
    "push:submit": "gvv",
    "test": "jja cls && jest --coverage",
    "vjj": "npm run build && node dist/bin.mjs",
    "prepublishOnly": "pjj",
    "prepare": "husky"
  },
  "license": "ISC",
  "dependencies": {
    "@qqi/dev-log": ">=0.2.0 <1.0.0",
    "a-command": ">=2.1.7 <3.0.0",
    "a-js-tools": ">=0.6.1 <1.0.0",
    "a-node-tools": ">=3.0.1 <4.0.0",
    "a-type-of-js": ">=0.2.0 <1.0.0",
    "color-pen": ">=1.3.2 <2.0.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.3",
    "codecov": "^3.8.3",
    "coveralls": "^3.1.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-jsdoc": "^50.6.11",
    "globals": "^16.0.0",
    "gvv": "^0.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jja": "^2.3.0",
    "lint-staged": "^15.5.1",
    "pjj": "^0.2.4",
    "prettier": "^3.5.3",
    "rollup": "^4.40.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.3.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vjj": "^0.3.2"
  }
}
