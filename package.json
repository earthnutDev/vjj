{
  "name": "vjj",
  "type": "module",
  "version": "1.0.10",
  "private": true,
  "description": "一个简单的 npm 包版本更新 🔧 就是 `npm version` 的再 📦 ",
  "scripts": {
    "beautify": "pnpm run eslint && pnpm run prettier",
    "build": "jja rm dist && rollup --config rollup.config.js && pnpm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "diff": "jja pkg --diff=淘宝",
    "eslint": "jja cls && eslint src",
    "dev": "rollup --config rollup.dev.config.js && node .eg/index.mjs",
    "prettier": "jja cls && prettier . --write",
    "push:version": "gvv",
    "push": "gvv",
    "test": "jja cls && jest --coverage",
    "vjj": "pnpm run build && node dist/bin.mjs",
    "prepublishOnly": "pjj",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@qqi/log": "^0.1.0",
    "a-command": "^2.3.12",
    "a-js-tools": "^1.0.7",
    "a-node-tools": "^4.2.15",
    "a-type-of-js": "^1.0.5",
    "color-pen": "^2.0.11"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@qqi/check-version": "^1.0.4",
    "@qqi/rollup-external": "^1.0.9",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.0.14",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.7",
    "eslint-plugin-jsdoc": "^52.0.1",
    "globals": "^16.3.0",
    "gvv": "^0.1.3",
    "husky": "^9.1.7",
    "jja": "^2.3.12",
    "lint-staged": "^16.1.2",
    "pjj": "^1.0.3",
    "prettier": "^3.6.2",
    "rollup": "^4.45.1",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "ts-jest": "^29.4.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vjj": "^1.0.8"
  }
}
